@using SL.Util
@{
    if (!SL.Web.Service.UserService.CheckAuth())
    {
        return;
    }

    RequestUtil req = new RequestUtil();

    int id = req.Int("id", false, "请选择门店");
    int shopId = req.Int("shopId", false, "请选择门店");
    string plateNumber = req.String("plateNumber", false, "请填写车牌号");
    int type = req.Int("type", false, "请填写车牌号");
    string carType = req.String("CarType", false, "请填写CarType");
    string buyer = req.String("name", false, "请填写Buyer");
    string buyerMobile = req.String("mobile", false, "请填写BuyerMobile");
    string buyerAddress = req.String("address", false, "请填写BuyerAddress");

    string seller = req.String("seller", false, "请填写Seller");
    string sellerMobile = req.String("sellerMobile", false, "请填写SellerMobile");
    string sellerAddress = req.String("sellerAddress", false, "请填写SellerAddress");

    string transferRegion = req.String("region");
    decimal price = req.Decimal("price");

    if (req.HasError)
    {
        Json.Write(new { success = false, returnCode = "0000", msg = req.FirstError, errors = req.GetErrors() }, Output);
        return;
    }

    SL.Data.SQL.Execute("update [Transfer] set ShopID=@p0,PlateNumber=@p1,[Type]=@p2,CarType=@p3,Buyer=@p4,BuyerMobile=@p5,BuyerAddress=@p6,Seller=@p7,SellerMobile=@p8,SellerAddress=@p9,TransferRegion=@p10,Price=@p11 where TransferID=@p12", shopId, plateNumber, type, carType, buyer, buyerMobile, buyerAddress, seller, sellerMobile, sellerAddress, transferRegion, price, id);

    Json.Write(new { success = true }, Output);
    return;
}
